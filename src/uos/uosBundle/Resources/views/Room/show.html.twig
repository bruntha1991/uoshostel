{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Room</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Hallname</th>
                <td>{{ entity.hallname }}</td>
            </tr>
            <tr>
                <th>Roomno</th>
                <td>{{ entity.roomno }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Monthlycost</th>
                <td>{{ entity.monthlycost }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('room') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('room_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
