{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hall</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Hallname</th>
                <td>{{ entity.hallname }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ entity.capacity }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ entity.gender }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('hall') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('hall_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
