{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Work</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Employeeid</th>
                <td>{{ entity.employeeid }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Hallname</th>
                <td>{{ entity.hallname }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('work') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('work_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
